@model CarType

<form method="post" asp-action="DeletePost"> @*Je crée un formulaire avec un HTTP Post!*@
    <input asp-for="Id" hidden /> @*Obligé de rajouter cette ligne caché afin de pouvoir utiliser mon remove*@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Car Type Category</h2>
            <hr />
        <div asp-validation-summary="All"></div>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label> 
            <input asp-for="Name" disabled class="form-control" />
            
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button> 
        <a asp-controller="CarType" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List </a>
       
    </div>
</form>


@*Je rajoute cette section script et cela me donne une validation coté client.
    Avantage : Je ne contact pas le serveur, tout se passe coté client!!!!
*@
