@model IEnumerable<AuxiPress.Models.Product>

<div class="container">
    <div class="text-center my-5">
        <img src="~/lib/ToyCarsLogo.png" class="img-fluid" width="75%"/>  
         <br /> 
         <br />
         <br />
        <h1>All the Toys </h1>
                
           <hr />
     </div>
 </div>


 <div class="row pb-3">
	@foreach(var product in Model)
	{
		<div class="col-lg-3 col-md-6">
			<div class="row p-2">
				<div class="col-12 p-1" style="border:1px solid #008cba; height:400px; border-radius: 5px;">
					<div class="card">
						<img src="@product.ImageURL" class="card-img-top rounded" style="height:150px"/>

						<div class="card-body">
						<div class="pl-1">
							<p class="card-title h5 text-primary">@product.Name</p>
							<p class="card-title text-info">by <b>@product.Maker</b></p>
						</div>
						<div class="pl-1">
							<p>List Price: <strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
						</div>
						<div class="pl-1">
							<p>As low as: <b>$@product.Price100.ToString("0.00")</b></p>
						</div>
						</div>
					</div>
					<div>
						<a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@product.Id">
							Details
						</a>
					</div>
				</div> 
			</div>
		</div>
	}
</div>


